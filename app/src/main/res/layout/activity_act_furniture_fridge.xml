<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indalosoftworks.removalquoter.ActFurnitureFridge">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="two door fridge"
        android:id="@+id/btn_two_door_fridge"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fridge-freezer"
        android:id="@+id/btn_fridge_freezer"
        android:layout_below="@+id/btn_two_door_fridge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="under counter fridge"
        android:id="@+id/btn_under_counter_fridge"
        android:layout_below="@+id/btn_fridge_freezer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
