<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indalosoftworks.removalquoter.ActVehicle">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bicycle"
        android:id="@+id/btn_bicycle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Quad Bike"
        android:id="@+id/btn_quadBike"
        android:layout_below="@id/btn_bicycle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Motorbike"
        android:id="@+id/btn_motorbike"
        android:layout_below="@+id/btn_quadBike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mobility Scooter"
        android:id="@+id/btn_mobilityScooter"
        android:layout_below="@id/btn_motorbike"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>
