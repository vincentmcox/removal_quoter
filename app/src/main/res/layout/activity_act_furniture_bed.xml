<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indalosoftworks.removalquoter.ActFurnitureBed">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single bed"
        android:id="@+id/btn_bed_single"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Double bed"
        android:id="@+id/btn_bed_double"
        android:layout_below="@+id/btn_bed_single"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queen size bed"
        android:id="@+id/btn_bed_queen"
        android:layout_below="@+id/btn_bed_double"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="king size bed"
        android:id="@+id/btn_bed_king"
        android:layout_below="@+id/btn_bed_queen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
